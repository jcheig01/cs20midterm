<!DOCTYPE html>
<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href=
            "https://fonts.googleapis.com/css2?family=Rubik+Beastly&family=Shrikhand&display=swap"
            rel="stylesheet">
        <link href=
            "https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&display=swap"
            rel="stylesheet">
        <meta charset="utf-8">
        <title>Home</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="index.css">
        <style>
            body {
                background: url('space.jpg') no-repeat center center fixed;
                background-size: cover;
            }
            #moon {
                height: 60%;
                width: auto;
                position: absolute;
                bottom: 10%;
            }
            #moon:hover {
                height: 71%;
                width: auto;
                transition: 0.2s;
            }
            #grid {
                display: flex;
                justify-content: center;
            }
            #text {
                position: relative;
                top: 10%;
                text-align: center;
            }

            h2 {
                -webkit-text-stroke: 1px #7A3803;
                color: #E3B104;
                font-size: 90px;
                font-weight: bold;
                font-family: 'Shrikhand', cursive;
                margin: 0px 0px 0px 0px;
            }

            p {
                color: #FFF;
                font-size: 20px;
                font-weight: bold;
                font-family: 'IBM Plex Sans', sans-serif;
                padding: 5px;
                background-color: #000;
                opacity: 0.7;
                margin: 0px 0px 0px 0px;
            }

            .rec, .followup {
                position:absolute;
                top:3%;
                right:2%;
            }

            #button, #recommend {
                background-color: grey;/* Green */
                border: none;
                color: white;
                padding: 12px 30px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                border-radius: 25px;
            }


        </style>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    </head>
    <body>
        <header>
            <a href='index' style='text-decoration: none;'><h1 class = "home_link"> moon shoes </h1></a>
            <div class="rec" style="visibility:hidden;">
                <form action="/" method="POST">
                    <input type="hidden" id="latitude" name="latitude" value="">
                    <input type="hidden" id="longitude" name="longitude" value="">
                    <button type="submit" id="button">Want Recommendation?</button>
                </form>
            </div>
            <div class="followup" style="visibility:hidden;">
                <a href="recommend"><button id="recommend">Click Here!</button></a>
            </div>
            <hr>
        </header>

        <div id='grid' style="z-index: 1;">
            <img id='moon' src="moon.png">
        </div>
        <div style="z-index: 2;">
            <nav>
                <ul class="nav">
                    <li class="nav-list"><a class="curr" href="index">Home</a></li>
                    <li class="nav-list"><a href="about">About</a></li>
                    <li class="nav-list"><a href="location">Locations</a></li>
                    <li class="nav-list"><a href="mens">Men's</a></li>
                    <li class="nav-list"><a href="womens">Women's</a></li>
                    <li class="nav-list"><a href="contact">Contact</a></li>
                    <li class="nav-list"><a href="faq">FAQs</a></li>
                    <div class = "nav-cart"><a href="creditcard"><img id='cart' src="cart.png"></a></div>
                </ul>
            </nav>
            <div id='text'>
                <h2>moon</br>shoes</h2>
                <p>one small step for you, one big step for human kind.</p>
            </div>
        </div>
        
        <footer style="padding-top: 400px;"> 
                <hr>
                This website is for academic purpose. 2022 Moon Shoes All Rights Reserved
        </footer>

        <script>
            $(function () {
                function bob () {
                    $('#moon')
                    .animate( { bottom: 90 }, 2000)
                    .animate( { bottom: 60 }, 2000, bob);
                }
                bob ();
            });

            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                console.log("Geolocation is not supported by this browser.");
            }
            
            var first = true;

            function showPosition(position) {
                if (first) {
                    document.getElementById("latitude").value = position.coords.latitude;
                    document.getElementById("longitude").value = position.coords.longitude;
                    $('.rec').css({opacity: 0, visibility: "visible"}).animate({opacity: 1}, 300);
                    first = false;
                }
            }

            $(document).ready(function() {
                $("#button").click(function(){
                    $('.rec').hide();
                    $('.followup').css({opacity: 0, visibility: "visible"}).animate({opacity: 1}, 300);
                }); 
            });
        </script>
    </body>
</html>
